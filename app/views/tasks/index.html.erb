<div class="container">
<h1>My Tasks</h1>
  <div class="tasks-container">
    <ul>
      <% @tasks.each do |task| %>
        <li><%= task.completed %> <%= link_to task.title, task_path(task) %> <%= link_to '🗑', task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to '✏️', new_task_path %>
</div>
